<h2>Books</h2>

<% @books.each do |book| %>

  <p>タイトル</p>
  <span><%= book.title %></span>
  <span>
    <%= link_to "Edit", book_path(book.id) %>
  </span>

  
<% end %>


<h2>New book</h2>
<!-- form_with部分 -->
<%= form_with model: @book do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>
	
  <h4>Body</h4>
  <%= f.text_area :body %><br>
	
  <%= f.submit 'Create Book' %>
<% end %>